<div class="main_container">

  <div class="mdl-card mdl-shadow--5dp main_card">
    <div id="main_branding">
      <div id="main_branding_background">
        <%= image_tag 'crowd.jpg' %>
      </div>
      <div id="main_branding_glass">

      </div>
      <div id="main_branding_content">
        <h1>sociol</h1>
      </div>
      <div id="main_branding_tagline">
        <h2>change the way you socialize</h2>
      </div>
    </div>
    <div id="essential_form">
      <h2>Log in</h2>
      <div id="login_form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, class: 'mdl-textfield__label' %>
              <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
            </div>

            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, class: "mdl-textfield__label" %>
              <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
            </div>
            <div class="actions">

              <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= content_tag :label, for: :user_remember_me, class: 'mdl-switch mdl-js-switch mdl-js-ripple-effect' do %>
                        <%= f.check_box(:remember_me, class: 'mdl-switch__input', checked: true) %>
                        <span class="mdl-switch__label">Remember Me</span>
                    <% end %>
                  </div>
              <% end %>

              <%= link_to new_registration_path(resource_name) do %>
                  <%= button_tag 'Sign Up', class: "mdl-button mdl-js-button mdl-button--primary" %>
              <% end %>
              <%= f.button "Log in", type: 'submit', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored' %>
            </div>
        <% end %>
      </div>
      <div class="rendered">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

