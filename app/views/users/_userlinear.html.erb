<div class="user" id="<%= 'user_' + user.id.to_s %>">
  <div class="user_profile_thumb"><img src="<%= user.profile.url %>"></div>
  <div class="user_name"><%= user.name %></div>
  <% unless FriendRequest.exists? current_user.id, user.id %>
      <%= link_to create_friend_request_path(requested: user.id), method: :post, remote: true do %>
          <button class="mdl-button mdl-js-button mdl-button--colored">
            Friend
          </button>
      <% end %>
  <% end %>
</div>