<div class="main_container">
  <div class="mdl-card mdl-shadow--5dp main_card">
    <div id="main_branding">
      <div id="main_branding_background">
        <%= image_tag 'crowd.jpg' %>
      </div>
      <div id="main_branding_glass">

      </div>
      <div id="main_branding_content">
        <h1>sociol</h1>
      </div>
      <div id="main_branding_tagline">
        <h2>change the way you socialize</h2>
      </div>
    </div>
    <div id="essential_form">
      <h2>Sign up</h2>
      <%= devise_error_messages! %>
      <div id="sign_form">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :name, class: 'mdl-textfield__label' %>
              <%= f.text_field :name, autofocus: true, class: 'mdl-textfield__input' %>
            </div>
            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :username, class: 'mdl-textfield__label' %>
              <%= f.text_field :username, class: 'mdl-textfield__input' %>
            </div>
            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, class: 'mdl-textfield__label' %>
              <%= f.email_field :email, class: 'mdl-textfield__input' %>
            </div>

            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, class: 'mdl-textfield__label' %>
              <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
            </div>

            <div class="field mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %>
            </div>
            <div class="actions">
              <%= f.submit "Sign up" %>
            </div>
        <% end %>
      </div>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>