<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <% if user_signed_in? %>
        <%= current_user.name.to_s.upcase %> :
    <% end %>
    Sociol : The completely open social network.
  </title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Google Fonts Dependency-->
  <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,600,700,800,900|Roboto:300,400,500,700" rel="stylesheet">
  <!--MDL Dependency-->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
  <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <!--Animate CSS-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
  <!--Font Awesome Dependency-->
  <script src="https://use.fontawesome.com/85a67bb8dc.js"></script>
</head>
<body>
<!--Devise Alerts + NOTYJS Alerts-->
<% if notice %>
    <script type="text/javascript">
        noty({text: '<%= notice %>', type: 'alert', timeout: 500});
    </script>
<% end %>
<% if alert %>
    <script type="text/javascript">
        noty({text: '<%= alert %>', type: 'alert', timeout: 500});
    </script>
<% end %>
<% if user_signed_in? %>
    <header>
      <div id="header_wrapper">
        <div id="logo_container">
          <h1>sociol</h1>
        </div>
        <div id="search_container">
          <input type="text" id="search_field"/>
          <i class="material-icons">search</i>
        </div>
        <div id="links-container">
          <button class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons">person_outline</i>
          </button>
          <button class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons">exit_to_app</i>
          </button>
          <button class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons">assignment_ind</i>
          </button>
          <button class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons">notifications</i>
          </button>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <% end %>
          <%= link_to network_path, method: :get do %>
              <button class="mdl-button mdl-js-button mdl-button--icon">
                <i class="material-icons">public</i>
              </button>
          <% end %>
        </div>
      </div>
    </header>
<% end %>

<%= yield %>

</body>
</html>
